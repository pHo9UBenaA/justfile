    #!/usr/bin/env bash
    set -e

    URL="{{url}}"

    # PDFã®URLã‚’å–å¾—
    echo "ğŸ” Fetching SpeakerDeck page: $URL"
    pdf_url=$(curl -s "$URL" | \
        grep -o 'https://files\.speakerdeck\.com/presentations/[^"]*\.pdf' | \
        head -1)

    if [ -z "$pdf_url" ]; then
        echo "âŒ No PDF URL found in the page"
        exit 1
    fi

    echo "ğŸ“„ Found PDF URL: $pdf_url"

    # ãƒ•ã‚¡ã‚¤ãƒ«åã‚’æŠ½å‡ºï¼ˆURLãƒ‡ã‚³ãƒ¼ãƒ‰ã—ã¦æ—¥æœ¬èªãƒ•ã‚¡ã‚¤ãƒ«åã«å¯¾å¿œï¼‰
    filename=$(basename "$pdf_url" | python3 -c "import sys, urllib.parse; print(urllib.parse.unquote(sys.stdin.read().strip()))")

    echo "ğŸ’¾ Downloading: $filename"

    # PDFã‚’ãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰
    curl -L -o "$filename" "$pdf_url"

    echo "âœ… Downloaded: $filename"
